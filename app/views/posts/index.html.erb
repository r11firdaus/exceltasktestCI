<% console %>
<div class="d-flex">
  <% if session[:userdata]['role_id'] == 1 || session[:userdata]['role_id'] == 2 %>
    <div class="p-2">
      <%= link_to 'Add Post', new_post_path, class: "btn btn-primary" %>
    </div>
  <% end %>
  
  <%= link_to 'Advance search', new_search_path, class: 'p-2 ms-auto' %>
</div>

<div class="row">
  <div class="mt-3">
    <%= render 'component/posts_toolbar' %>
    <div class="row">
      <% @posts.each do |post| %>
        <div class="col-sm-6">
          <div class="card my-2">
            <div class="card-body">
              <h4><%= link_to(post.title, post_path(post.id)) %></h4>
              <strong>Writer: <%= post.username %></strong>
              <p><%= truncate(post.body, length: 200) %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<hr>
<%= paginate @posts, window: 4 %>
<%= page_entries_info @posts %>