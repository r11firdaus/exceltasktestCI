<%= link_to 'Advance search', new_search_path %>
<div class="row">
  <div class="mt-3">
    <% if session[:userdata]["role"] == 'admin' || session[:userdata]["role"] == 'writer' %>
      <%= link_to 'Add Post', new_post_path, class: "btn btn-primary" %>
    <% end %>
    <div class="row">
      <% @posts.each do |post| %>
        <div class="col-sm-6">
          <div class="card my-2">
            <div class="card-body">
              <h4><%= link_to(post.title, post_path(post.id)) %></h4>
              <strong>Writer: <%= post.username %></strong>
              <p><%= truncate(post.body, length: 200) %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<hr>
<%= paginate @posts, window: 4 %>
<%= page_entries_info @posts %>