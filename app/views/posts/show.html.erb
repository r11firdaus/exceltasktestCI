<div class="container">
	<%= link_to 'All posts', posts_path %>
    <h1><%= @post.title %></h1>

    <div class="card mx-auto">
        <div class="card-body">
            <p><%= @post.body %></p>
            <%= link_to('Export PDF', post_path(@post, format: :pdf)) %>
            <p class="text-muted">File will be removed after 1 minute.</p>
        </div>
    </div>

    <div class="card p-2 mt-3 mb-5">
        <h5>Comments</h5>
        <%= render @post.comments %>
    </div>

    <div class="mb-5">
        <strong>Add a comment:</strong>
        <%= render 'comments/form' %>
    </div>

    <div class="row fixed-bottom">
        <%= link_to('Edit', edit_post_path(@post), class: "btn btn-success col") %>
        <%= link_to('Destroy', post_path(@post),method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger col") %>
    </div> 
</div>